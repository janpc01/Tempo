<!-- dashboard.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% if(edit) { %> 
        <title>Edit <%= dashboard.getName() %></title> 
    <% } else { %> 
        <title>Create New Dashboard</title> 
    <% } %>
</head>
<body>
    <% if(edit) { %>
        <h1>Edit <%= dashboard.getName() %></h1>
        <form action="/<%= authUser.username %>/<%= dashboard.getId() %>/delete" method="POST">
            <input type="hidden" id="dashboardId" name="id" value="<%= dashboard.getId() %>" />
            <button type="submit" onclick="return confirm('Are you sure you want to delete this dashboard?')">Delete</button>
        </form>        
        <form action="/<%= authUser.username %>/<%= dashboard.getName() %>/edit" method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="<%= dashboard.getName() %>">
            <input type="hidden" id="dashboardId" name="id" value="<%= dashboard.getId() %>" />
            <button type="submit">Save</button>
        </form>
    <% } else { %> 
        <h1>Create New Dashboard</h1>
        <form action="/<%= authUser.username %>/dashboard/new" method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Enter Dashboard Name">
            <button type="submit">Save</button>
        </form>
    <% } %>
</body>
</html>
